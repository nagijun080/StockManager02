<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stockmanagerforandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_login_activity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/title_client_view_activity" android:name="ClientViewActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="ItemViewActivity" android:label="@string/title_item_view_activity" android:screenOrientation="portrait"></activity>
        <activity android:name="HistoryViewActivity" android:label="@string/title_history_view_activity"></activity>
    </application>

</manifest>